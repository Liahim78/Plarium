<Window x:Class="Plarium.Views.ChooseDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plarium.Views"
        mc:Ignorable="d"
        Title="ChooseDirectory" Height="200" Width="300">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" TextAlignment="Center" VerticalAlignment="Center"  >Введите полный адресс папки</TextBlock>
        <TextBox FontSize="20" Grid.Row="1" Margin="10,5"></TextBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="10,5" FontSize="20" Click="Button_Click" >Выбрать</Button>
            <Button Grid.Column="1" Margin="10,5" FontSize="20" Click="Button_Click_1" >Отмена</Button>
        </Grid>
    </Grid>
</Window>
